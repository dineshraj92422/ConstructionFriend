<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drmarks.constructionfriend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_architect"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_architect"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConstructionFriend">
        <activity android:name=".MoreDetailsActivity"></activity>
        <activity android:name=".TendorActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReportActivity" />
        <activity android:name=".InventoryActivity" />
        <activity android:name=".EstimationActivity" />
        <activity android:name=".IndustrialSectorActivity" />
        <activity android:name=".BillingActivity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>